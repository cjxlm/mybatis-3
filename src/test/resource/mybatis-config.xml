				<!--<property name="username" value="sa" />-->
			<!--</dataSource>-->
		<!--</environment>-->
	<!--</environments>-->

	<mappers>
		<package name="mytest.mapper"></package>
		<!--<mapper resource="mappersClient/TrafficSourceMapper.xml"/>-->
	</mappers>

</configuration>
